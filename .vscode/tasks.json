{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file (OpenGL & OpenAL)",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-framework",
                "OpenGL",
                "-lopenal",
                "-I",
                "/opt/homebrew/include",
                "-L",
                "/opt/homebrew/lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task modified for OpenGL & OpenAL support."
        }
    ],
    "version": "2.0.0"
}